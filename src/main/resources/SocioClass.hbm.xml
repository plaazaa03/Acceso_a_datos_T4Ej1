<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.SocioClass" table="socio" schema="biblioteca">
        <id name="dni">
            <column name="DNI" sql-type="char(9)" length="9"/>
        </id>
        <property name="nombre">
            <column name="nombre" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="tfno">
            <column name="tfno" sql-type="char(9)" length="9"/>
        </property>
    </class>
</hibernate-mapping>