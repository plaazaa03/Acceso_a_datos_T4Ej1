<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>

    <class name="org.example.LibroClass" table="libro" schema="biblioteca">
        <id name="isbn">
            <column name="ISBN" sql-type="char(17)" length="17"/>
        </id>
        <property name="titulo">
            <column name="titulo" sql-type="varchar(50)" length="50"/>
        </property>
        <property name="autor">
            <column name="autor" sql-type="varchar(30)" length="30"/>
        </property>
        <property name="editorial">
            <column name="editorial" sql-type="varchar(30)" length="30"/>
        </property>
    </class>
</hibernate-mapping>